{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "parameterObject": {
            "type": "array",
            "defaultValue": [
                {
                    "resouregroupname": "testrg1",
                    "roleassignements": ["7de9f602-70e7-44f1-b961-fa1ced21b807","ff1ce86c-ccbb-48e9-8029-9c91481131c5" ]
                },
                {
                    "resouregroupname": "testrg2",
                    "roleassignements": ["7de9f602-70e7-44f1-b961-fa1ced21b807","ff1ce86c-ccbb-48e9-8029-9c91481131c5" ]
                },
                {
                    "resouregroupname": "testrg3",
                    "roleassignements": ["7de9f602-70e7-44f1-b961-fa1ced21b807","ff1ce86c-ccbb-48e9-8029-9c91481131c5" ]
                }
            ]
        },
        "rgLocation": {
            "type": "string"
        },
        "tags": {
            "type": "object",
            "defaultValue": {}
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('rgLocation')]",
            "name": "[parameters('parameterObject')[copyIndex()].resouregroupname]",
            "properties": {},
            "tags": "[parameters('tags')]",
            "copy": {
                "name": "loopName",
                "count": "[length(parameters('parameterObject'))]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "[concat('nestedTemplate', copyIndex())]",

            "copy": {
                "name": "loopresourcegroup",
                "count": "[length(parameters('parameterObject'))]"
            },
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri":"https://github.com/lijoykurian/azure/blob/master/arm/roleassignment.json",
                "contentVersion":"1.0.0.0"
              },
              "parameters": {
                "monitoringUsersGroup":{"value": "[parameters('parameterObject')[copyIndex()].roleassignements]"},
                "resourceGroup":{"value": "parameters('parameterObject')[copyIndex()].resouregroupname"}

              }
            }
          }
    ],
    "outputs": {
        "subscriptionOutput": {
            "value": "[concat(subscription(),'/','resourceGroups')]",
            "type" : "object"
        }
    }
}